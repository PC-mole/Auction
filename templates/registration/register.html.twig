{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="/css/style.css">
{% endblock %}

{% block header %}
<header class="header">
    <div class="container">
        <div class="header_inner">
            <div class="header_logo" >  Аукцион </div>
            <nav class="nav">
                <a class="nav_link" href="/register">Зарегистрироваться</a>
                <a class="nav_link" href="/login">Войти</a>
            </nav>

        </div>

    </div>
{% endblock %}

{% block main %}


    {{ form_start(registrationForm, {
        'attr': {'class':'form_reg'}}) }}
        <div class="container2">
            <h1>Поле регистрации</h1><hr>
            {{ form_row(registrationForm.username, {
                label: 'Логин',
                'attr': {'class':'poleinput'}
            }) }}
            {{ form_row(registrationForm.name, {
                label: 'ФИО',
                'attr': {'class':'poleinput'}
            }) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Пароль',
                'attr': {'class':'poleinput'}
            }) }}
            {{ form_row(registrationForm.agreeTerms, {
                label: 'Согласиться с условиями'
            }) }}


            <button type="submit" class="registerbtn">Зарегистироваться</button>
            <button type="button" class="registerbtn">Сбросить</button>
        </div>
    <hr>
    {{ form_end(registrationForm) }}
    <div class="container signin">
        <p>У Вас уже есть учетная запись? <a href={{ path('app_logout') }}>Войти</a>.</p>
    </div>
{% endblock %}
